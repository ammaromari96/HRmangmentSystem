        padding: 10px;
        border: 1px solid #ccc;
        transition: all 0.3s ease-in-out;
    }

        .input-custom:focus {
            border-color: #743DB5;
            box-shadow: 0 0 10px rgba(116, 61, 181, 0.3);
        }

    /* Button Styling */
    .btn-primary {
        background-color: #743DB5;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #5a2d91;
            transform: scale(1.05);
        }
