        @model HRmangmentSystem.Models.Employee
@{
    Layout = "EmployeeDashbord";
}
<h2 class="mb-4 text-center">Edit Profile</h2>
<div class="card profile-edit-card shadow-lg p-4">
    <form asp-controller="Employee" asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div class="text-center mb-3">
            <img src="~/image/Employee/@Model.ProfileImage" class="rounded-circle shadow-sm profile-img" alt="Profile Image">
        </div>

        <div class="form-group mb-3">
            <label>First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Department</label>
            <input type="text" value="@ViewBag.DepartmentName" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Manager</label>
            <input type="text" value="@ViewBag.ManagerName1 @ViewBag.ManagerName2" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Latest Score</label>
            <input type="text" value="@ViewBag.LatestScore" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Upload New Profile Image</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
        </div>
    </form>
</div>

<style>
    /* Center Card */
    .profile-edit-card {
        max-width: 600px; /* Bigger card for better spacing */
        margin: auto;
        border-radius: 15px;
        padding: 30px;
    }

    /* Profile Image */
    .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 4px solid #743DB5;
    }

    /* Read-only Fields */
    input[readonly] {
        background-color: #f8f9fa;
        color: #6c757d;
        font-weight: bold;
    }

    /* Primary Button */
    .btn-primary {
        background-color: #743DB5;
        border: none;
        padding: 12px 18px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #5a2d91;
            transform: scale(1.05);
        }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
