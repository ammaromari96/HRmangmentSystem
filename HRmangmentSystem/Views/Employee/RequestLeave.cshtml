@model HRmangmentSystem.Models.LeaveOrVacation

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4 text-primary">Request Leave / Vacation</h2>
        @{
            Layout = "EmployeeDashbord";
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="RequestLeave" asp-controller="Employee" method="post">
            <div class="form-group mb-3">
                <label for="LeaveType">Leave Type</label>
                <select asp-for="LeaveType" class="form-control" required>
                    <option value="Annual Leave">Annual Leave</option>
                    <option value="Sick Leave">Sick Leave</option>
                    <option value="Emergency Leave">Emergency Leave</option>
                    <option value="Unpaid Leave">Unpaid Leave</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label>Start Date</label>
                <input type="date" asp-for="StartDate" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>End Date</label>
                <input type="date" asp-for="EndDate" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>Reason</label>
                <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit Request</button>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-primary {
        background-color: #ff758c;
        border: none;
        padding: 10px 15px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #ff4a67;
            transform: scale(1.05);
        }
</style>