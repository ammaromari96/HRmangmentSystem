@model IEnumerable<HRmangmentSystem.Models.LeaveOrVacation>

@{
    Layout = "EmployeeDashbord";
}
<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Your Leave Requests</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No leave requests found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="bg-light">
                    <tr>
                        <th>Leave Type</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leave in Model)
                    {
                        <tr>
                            <td>@leave.LeaveType</td>
                            <td>@leave.StartDate</td>
                            <td>@leave.EndDate</td>
                            <td><span>@leave.Status</span></td>
                            <td>@leave.Reason</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>