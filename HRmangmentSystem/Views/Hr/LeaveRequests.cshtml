@model IEnumerable<HRmangmentSystem.Models.LeaveOrVacation>

@{
    Layout = "~/Views/Shared/Hr_Layout.cshtml";
}


<h2>Approved Leave Requests</h2>
<div class="d-flex justify-content-start">
    <a href="@Url.Action("DownloadLeaveRequestsPDF", "HR")" class="btn btn-primary">
        <i class="bx bx-download"></i> Download PDF
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
                <tr>
                    <td>@leave.Employee.FirstName @leave.Employee.LastName</td>
                    <td>@leave.LeaveType</td>
                    <td>@leave.StartDate</td>
                    <td>@leave.EndDate</td>
                    <td>@leave.Reason</td>
                </tr>
        }
    </tbody>
</table>
