@model IEnumerable<HRmangmentSystem.Models.Feedback>

@{
    Layout = "~/Views/Shared/Hr_Layout.cshtml";
}


<h2>Feedbacks</h2>
<div class="d-flex justify-content-start">
    <a href="@Url.Action("DownloadFeedbacksPDF", "HR")" class="btn btn-primary">
        <i class="bx bx-download"></i> Download PDF
    </a>
</div>
<table class="table table-striped table-hover shadow-sm">
    <thead class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.Name</td>
                <td>@feedback.Email</td>
                <td>@feedback.Message</td>
                <td>@feedback.SubmittedDate</td>
            </tr>
        }
    </tbody>
</table>