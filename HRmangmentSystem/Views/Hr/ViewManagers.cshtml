@model IEnumerable<Manager>

@{
    Layout = "~/Views/Shared/Hr_Layout.cshtml";
}



<h2>Managers List</h2>
<div class="d-flex justify-content-start">
    <a href="@Url.Action("DownloadManagersPDF", "HR")" class="btn btn-primary">
        <i class="bx bx-download"></i> Download PDF
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {


            <tr>
                <td>@manager.FirstName @manager.LastName</td>
                <td>@manager.Email</td>
                <td>@manager.Department?.DepartmentName</td>
            </tr>
        }
    </tbody>
</table>