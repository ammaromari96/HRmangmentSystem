@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/Hr_Layout.cshtml";
}


<h2>Employees List</h2>
<div class="d-flex justify-content-start">
    <a href="@Url.Action("DownloadEmployeesPDF", "HR")" class="btn btn-primary">
        <i class="bx bx-download"></i> Download PDF
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Manager</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
                <tr>
                    <td>@employee.FirstName @employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department?.DepartmentName</td>
                    <td>@(employee.Manager != null ? $"{employee.Manager.FirstName} {employee.Manager.LastName}" : "N/A")</td>
                </tr>
        }
    </tbody>
</table>
