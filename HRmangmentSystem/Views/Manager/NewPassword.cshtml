@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/585fda3aab.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="login-box">
        <h2>Rest password</h2>
        <p>Enter your new password</p>

        <form asp-controller="Manger" asp-action="NewPassword">

            <div class="form-group">
                <label for="Password">New password</label>
                <i class="fa-solid fa-lock"></i>
                <input name="Password" type="password" placeholder="Your new password" class="form-control" required>

            </div>

            <button type="submit" class="btn">Rest now</button>

            <div>
            </div>
        </form>
    </div>

</body>
</html>
