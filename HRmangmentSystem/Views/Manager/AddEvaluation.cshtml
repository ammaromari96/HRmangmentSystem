@model HRmangmentSystem.Models.Evaluation

@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml" ;
}

<h1>AddEvaluation</h1>

<h4>Evaluation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEvaluation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Assign to</label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateEvaluated" class="control-label"></label>
                <input asp-for="DateEvaluated" class="form-control" type="date" />
                <span asp-validation-for="DateEvaluated" class="text-danger"></span>
            </div>
            
            
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
